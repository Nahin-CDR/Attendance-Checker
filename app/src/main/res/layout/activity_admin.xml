<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Admin">



    <LinearLayout
        android:id="@+id/loading_layoutID"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_loadingID"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/loading"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Please Wait,We are getting your status.."/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_layoutID"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">


        <TextView
            android:layout_weight="2"
            android:textColor="#07B80D"
            android:textSize="20sp"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date  :-> "
            />

        <TextView
            android:id="@+id/date_id_of_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="today"
            android:paddingLeft="5dp"
            android:textColor="#07B80D"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/refresh_id"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh"/>

    </LinearLayout>


    <!--
    code for getting total child
    -->






    <LinearLayout
        android:id="@+id/item_list_show_layoutID"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="500dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/studentListId">

        </androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>


    <!--Code for Count Students-->


    <LinearLayout
        android:id="@+id/show_total_layoutID"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">

        <com.google.android.gms.ads.AdView

            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:adSize="SMART_BANNER"
            app:adUnitId="ca-app-pub-2485705965051323/7750484352">

        </com.google.android.gms.ads.AdView>





        <TextView
            android:layout_margin="50dp"
            android:textAlignment="center"
        android:id="@+id/sum_of_contentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E70707"
        android:text="Total Student"

        />
        <TextView
           android:layout_marginTop="0dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/sum_of_contentID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E70707"
            android:text="Total Student"

            />



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_margin="30dp"
          >


          <Button
              android:layout_marginTop="100dp"
              android:id="@+id/getSum_buttonID"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:background="@drawable/buttonshape"
              android:textColor="#ffffff"
              android:text="Get Sum"
              android:textAllCaps="false"
              android:layout_marginLeft="50dp"
              />

          <Button
              android:layout_marginTop="100dp"
              android:id="@+id/back_buttonID"
              android:layout_marginLeft="10dp"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:background="@drawable/buttonshape"
              android:textColor="#ffffff"
              android:text="Back"
              android:textAllCaps="false"
              />



      </LinearLayout>




    </LinearLayout>


    <!---ended-->

    <LinearLayout
        android:id="@+id/show_more_layoutID"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/more_buttonID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"
            android:text="More..."
            android:textAllCaps="false"
            />


    </LinearLayout>

    <!--Code for Count Students-->


</LinearLayout>