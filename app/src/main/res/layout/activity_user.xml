<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff "
    tools:context=".User">


    <TextView
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:id="@+id/timeID"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Current time"
        android:textColor="#0BE014"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:layout_marginTop="100dp"

        android:id="@+id/full_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="My Phone Number"/>



    <!--Date insertion starts -->

    <EditText
        android:id="@+id/date_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Enter Date"/>



    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/father_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="My Name"/>



    <Button
        android:id="@+id/submit_button_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="Submit"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>


    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/display_id"
            android:textSize="20sp"/>
    </androidx.core.widget.NestedScrollView>






</LinearLayout>